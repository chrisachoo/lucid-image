{
	"name": "lucid-image",
	"version": "1.1.1",
	"description": "A lightweight React image component with blur-up preview, lazy loading, and graceful fallback support.",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsup - watch",
		"build": "tsup",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier . --write",
		"prepare": "husky"
	},
	"dependencies": {
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^4.16.1",
		"@eslint-react/eslint-plugin": "^1.52.2",
		"@types/node": "^24.0.4",
		"eslint": "^9.29.0",
		"eslint-plugin-format": "^1.0.1",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"husky": "^9.1.7",
		"image-size": "^2.0.2",
		"lint-staged": "^16.1.2",
		"prettier": "3.6.0",
		"react": "^18",
		"react-dom": "^18",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"react": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/chrisachoo/lucide-image.git"
	},
	"keywords": [
		"react",
		"image",
		"blur",
		"fallback",
		"lazy-load",
		"lucid-image",
		"react-component",
		"lightweight"
	],
	"homepage": "https://github.com/chrisachoo/lucide-image#readme",
	"lint-staged": {
		"*.{json,md}": "pnpm format",
		"*.{ts,tsx}": "pnpm lint:fix"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "pnpm@9.0.0"
}
