{
	"name": "smart-image",
	"version": "1.0.0",
	"description": "A lightweight React <Image> component with lazy loading, blur-up placeholder & fallback support",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier . --write",
		"prepare": "husky"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^4.16.1",
		"@eslint-react/eslint-plugin": "^1.52.2",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"eslint": "^9.29.0",
		"eslint-plugin-format": "^1.0.1",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "3.6.0",
		"react": "^18",
		"react-dom": "^18",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"react": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/chrisachoo/smart-image.git"
	},
	"keywords": [
		"react",
		"image",
		"lazy-loading",
		"blur-up",
		"fallback",
		"react-component",
		"smart-image"
	],
	"homepage": "https://github.com/chrisachoo/smart-image#readme",
	"lint-staged": {
		"*.{json,md}": "pnpm format",
		"*.{ts,tsx}": "pnpm lint:fix"
	},
	"engines": {
		"node": ">=18"
	}
}
