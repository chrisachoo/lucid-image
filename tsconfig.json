{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"strict": true,
		"outDir": "dist"
	},
	"include": ["src"]
}
